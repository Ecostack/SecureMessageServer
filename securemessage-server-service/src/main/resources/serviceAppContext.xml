<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
				http://www.springframework.org/schema/tx 
		        http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
		        http://www.springframework.org/schema/context 
		        http://www.springframework.org/schema/context/spring-context-3.0.xsd">



	<context:component-scan base-package="de.bio.hazard.securemessage.service" />

	<context:component-scan base-package="de.bio.hazard.securemessage.model" />

	<context:component-scan base-package="de.bio.hazard.securemessage.dao" />

	<context:component-scan base-package="de.bio.hazard.securemessage.util" />

	<bean id="encryptionObjectModifier"
		class="de.bio.hazard.securemessage.tecframework.encryption.facade.helper.EncryptionObjectModifier"
		scope="singleton" />

	<bean id="asymmetricKeygen"
		class="de.bio.hazard.securemessage.tecframework.encryption.asymmetric.AsymmetricKeygen"
		scope="singleton" />

	<bean id="symmetricKeygen"
		class="de.bio.hazard.securemessage.tecframework.encryption.symmetric.SymmetricKeygen"
		scope="singleton" />
		
		<bean id="idGenerator"
		class="de.bio.hazard.securemessage.tecframework.data.IdGenerator"
		scope="singleton" />

	<import resource="db.xml" />



</beans>
